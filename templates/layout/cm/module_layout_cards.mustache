{{!
    @template format_designer/layout/cm/module_layout_cards

    Displays the course module card layout

    Example context (json):
    {
        "cmitem": {
            "cmname": "<a class=\"aalink\" href=\"#\"><span class=\"instancename\">Assign example</span></a>",
            "hasname": "true",
            "id": 3,
            "module": "assign",
            "extraclasses": ""
        }

    }
}}

{{#.}}
    {{#cmitem}}
        <li
        class="activity {{module}} modtype_{{module}} {{extraclasses}} {{#hasinfo}}hasinfo{{/hasinfo}}
        {{#isrestricted}}restricted{{/isrestricted}} position-relative"
        id="module-{{id}}"
        data-for="cmitem"
        data-id="{{id}}">
            <div class="card card-list {{colorclass}}" data-action="go-to-url" data-url="{{url}}" style="cursor: pointer">
                <div class="card-body">
                    <div class="mod-indent-outer">
                        {{{movehtml}}}
                        <div class="mod-indent {{#indent}}mod-indent-{{indent}}{{/indent}} {{#hugeindent}}mod-indent-huge{{/hugeindent}}"></div>
                        <div class="activityinstance">
                            <div class="activity-type">
                                <p>{{modtype}}</p>
                            </div>
                            {{#cmname}} {{> core/inplace_editable }} {{/cmname}}
                            {{{beforecontent}}}
                            {{{afterlink}}}
                        </div>

                        {{#modcontent}}
                            <div class="mod-content">
                                {{{modcontent}}}
                            </div>
                        {{/modcontent}}

                        {{#cmcompletionhtml}}
                            <div class="completion-html-card">
                                {{{cmcompletionhtml}}}
                            </div>
                        {{/cmcompletionhtml}}

                        {{#modvisits}}
                        <div class="mod-visits-block text-muted">
                            <p>{{modvisits}}</p>
                        </div>
                        {{/modvisits}}

                        <div class="action-html-card">
                            {{{calltoactionhtml}}}
                        </div>
                    </div>
                </div>
                {{#modicons}}
                <div class="actions">
                    {{{modicons}}}
                </div>
                {{/modicons}}
                {{{aftercontent}}}
            </div>
        </li>
    {{/cmitem}}
{{/.}}
