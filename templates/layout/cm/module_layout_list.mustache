{{!
    @template format_designer/layout/cm/module_layout_list

    Displays the course module card layout

    Example context (json):
    {
        "reactionurl_dislike" : "http://moodleurl/course/format/designer/classes/output/courseformat/content/secton/cmlist.php"

    }
}}
{{#.}}
    {{#cmitem}}
        <li
            class="activity {{module}} modtype_{{module}} {{extraclasses}} {{#hasinfo}}hasinfo{{/hasinfo}}
            {{#isrestricted}}restricted{{/isrestricted}} position-relative my-1"
            id="module-{{id}}"
            data-for="cmitem"
            data-id="{{id}}"
        >
            <div class="card card-list {{colorclass}}" data-action="go-to-url" data-url="{{url}}" style="cursor: pointer">
                <div class="card-body">
                    <div class="mod-indent-outer w-100">
                        {{{movehtml}}}
                        <div class="mod-indent {{#indent}}mod-indent-{{indent}}{{/indent}} {{#hugeindent}}mod-indent-huge{{/hugeindent}}"></div>
                        <div class="row">

                            <div class="col-12 col-lg-7">
                                <div class="activityinstance">
                                    <div class="activity-type">
                                        <p>{{module}}</p>
                                    </div>
                                    {{#cmname}} {{> core/inplace_editable }} {{/cmname}}
                                    {{{beforecontent}}}
                                    {{{afterlink}}}
                                </div>
                                {{{availability}}}

                                {{#modcontent}}
                                <div class="mod-content">
                                    {{{modcontent}}}
                                </div>
                                {{/modcontent}}
                            </div>

                            <div class="col-8 col-lg-3">
                                <div class="row h-100 pull-right">
                                    <div class="col align-self-center">
                                        {{{cmcompletionhtml}}}
                                        {{#modvisits}}
                                        <div class="mod-visits-block text-muted">
                                            <p>{{modvisits}}</p>
                                        </div>
                                        {{/modvisits}}
                                    </div>
                                </div>
                            </div>

                            <div class="col-4 col-lg-2 show-on-hover">
                                <div class="row h-100 pull-right">
                                    <div class="col align-self-center">
                                        {{{calltoactionhtml}}}
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="module-icons">
                    {{#modicons}}
                        <div class="actions">
                            {{{modicons}}}
                        </div>
                    {{/modicons}}
                </div>
            </div>
        </li>
    {{/cmitem}}
{{/.}}