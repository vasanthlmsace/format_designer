    {{#hascms}}
        {{#showmovehere}}
        <li class="movehere">
            <a href="{{{moveurl}}}" title="{{strmovefull}}" class="movehere"></a>
        </li>
        {{/showmovehere}}

        {{#cms}}
            {{> format_designer/layout/cm/module_layout_cards}}
        {{/cms}}

    {{/hascms}}

    {{#showmovehere}}
        <li class="movehere">
            <a href="{{{movetosectionurl}}}" title="{{strmovefull}}" class="movehere"></a>
        </li>
    {{/showmovehere}}
</ul>